@model IEnumerable<SplitBill.Models.Billing>

@{
    ViewBag.Title = "Index";
}

<h2>Report Index</h2>

<p>
    @using (Html.BeginForm())
    {
    <p>
        @*Title: @Html.TextBox("SearchString") <br />*@
        Month: @Html.DropDownList("billingMonth") <wbr />
        Year: @Html.DropDownList("billingYear") <br />
        <input type="submit" value="Search" />
    </p>
    }
    
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaidDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaidBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaidAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BillingMonth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BillingYear)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaidDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaidBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaidAmount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BillingMonth)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BillingYear)
        </td>
    </tr>
}

</table>
    @using (Html.BeginForm())
    {
    <p>
        <b>Total: @ViewBag.total</b> <br />
        <b>Per Head: @ViewBag.perHead</b> <br />
        <b>@if (ViewBag.finalMessage != null)
        {
            foreach (var item in ViewBag.finalMessage)
            {
                @item <br />
            }
        }</b> <br />
    </p>
    }